{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "codexing",
  "version": "0.1.0",
  "identifier": "com.david.codexing",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "codexing",
        "width": 1920,
        "height": 1080
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/embedding/tokenizer.json",
      "resources/sqlite-vec/*"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/David-Lee-dev/codexing/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJEQTBBMzgyNTA4QjA2MkIKUldRckJvdFFncU9nTFhUaW5WcUZxT0tSR2Z0KzRKSzJLQVUwM0ZxOGdBR0lpc0J4Und2YWVpN1IK"
    }
  }
}
